<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>aa.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlar</servlet-name>
        <servlet-class>Controles.Controlar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CambiarP</servlet-name>
        <servlet-class>Controles.CambiarP</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnviarM</servlet-name>
        <servlet-class>Controles.EnviarM</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnviarMensajeAdmin</servlet-name>
        <servlet-class>Controles.EnviarMensajeAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarUsuario</servlet-name>
        <servlet-class>Controles.ModificarUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlar</servlet-name>
        <url-pattern>/Controlar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CambiarP</servlet-name>
        <url-pattern>/CambiarP</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnviarM</servlet-name>
        <url-pattern>/EnviarM</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnviarMensajeAdmin</servlet-name>
        <url-pattern>/EnviarMensajeAdmin</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Index.jsp</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>ModificarUsuario</servlet-name>
        <url-pattern>/ModificarUsuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            120
        </session-timeout>
    </session-config>
</web-app>
